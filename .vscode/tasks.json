{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "编译Debug版本",
            "type": "shell",
            "command": "cmake --build build/debug -j$(sysctl -n hw.ncpu)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
        },
        {
            "label": "编译Release版本",
            "type": "shell",
            "command": "cmake --build build/release -j$(sysctl -n hw.ncpu)",
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
        },
        {
            "label": "使用CMake生成编译Debug版本所需的配置文件",
            "type": "shell",
            "command": "cmake -B build/debug -G Ninja -DCMAKE_PREFIX_PATH=$(brew --prefix qt) -DCMAKE_BUILD_TYPE=Debug -DSKIP_BUILD_TESTS=ON -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
        },
        {
            "label": "使用CMake生成编译Release版本所需的配置文件",
            "type": "shell",
            "command": "cmake -B build/release -G Ninja -DCMAKE_PREFIX_PATH=$(brew --prefix qt) -DCMAKE_BUILD_TYPE=Release -DSKIP_BUILD_TESTS=ON -DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
        },
        {
            "label": "清空编译文件",
            "type": "shell",
            "command": "rm -rf build/debug build/release",
            "group": "none",
            "problemMatcher": [],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
        }
    ]
}